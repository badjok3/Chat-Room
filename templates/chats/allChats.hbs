{{> header}}

<script>
    $(function () {
        console.log('ready');

        $('#publicChatsList div').click(markActive);
        $('#privateChatsList div').click(markActive);

        function markActive(e) {
            e.preventDefault();
            $that = $(this);
            $that.parent().find('div').removeClass('selected');
            $that.parent().find('a').text('join');
            $that.addClass('selected');
            $that.find('a').text('Leave');
        }
    })
</script>

<div class="container">
    <div class="row">

        <!-- All Chats & Users -->
        <div class="col-xs-3">

            <div class="chats-list-container">

                <!-- Public Chat Rooms -->
                <div id="publicChats" class="list-group chats scroll-bar-wrap">

                    <a class="list-group-item active" data-toggle="collapse" href="#publicChatsList"
                       aria-expanded="false"
                       aria-controls="collapseExample">
                        Public Chat Rooms
                        <span class="badge pull-right">207{{publicChatRooms.count}}</span>
                        <span class="caret"></span>
                    </a>

                    <div id="publicChatsList" class="scroll-box">
                        <div class="list-group-item">
                            Chat room {{chatRoom.name}}
                            <a href="#" class="btn btn-default btn-sm">Join</a>
                        </div>
                    </div>
                </div>

                <!-- Private Chat Rooms -->
                <div id="privateChats" class="list-group chats scroll-bar-wrap">

                    <a class="list-group-item active" data-toggle="collapse" href="#privateChatsList"
                       aria-expanded="false" aria-controls="">
                        Private Chat Rooms
                        <span class="badge pull-right">18{{privateChatRooms.count}}</span>
                        <span class="caret"></span>
                    </a>

                    <div id="privateChatsList" class="scroll-box">
                        <div class="list-group-item">
                            Chat room {{chatRoom.name}}
                            <a href="#" class="btn btn-default btn-sm">Join</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- Active Chat Pannel -->
        <div class="col-xs-9">
            <div class="chat-container">

                <!-- All Messages -->
                <div id="chatMessages" class="chat-messages">
                    <h3>Chat Name</h3>
                    <p>Joined this chat room as <a href="#" class="link">Anton Mayday</a> </p>
                    <hr>
                    <div class="media">
                        <div class="media-left">
                            <img src="public/images/userProfilePictures/lora.jpg" class="img-circle"
                                 style="width:60px">
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">Lora{{this.name}}{{this.date}}</h4>
                            <p>{{this.comment}}Some text</p>
                        </div>
                    </div>

                    <div class="media">
                        <div class="media-left">
                            <img src="public/images/userProfilePictures/lora.jpg" class="img-circle"
                                 style="width:60px">
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">Svet{{this.name}}{{this.date}}</h4>
                            <p>{{this.comment}}Sed ut perspiciatis unde omnis iste natus error sit voluptatem
                                accusantium
                                doloremque laudantium, totam rem aperiam, eaque ipsa quae ab illo inventore
                                veritatis et
                                quasi architecto beatae vitae dicta sunt explicabo.</p>
                        </div>
                    </div>
                </div>


                <!-- Send Message -->
                <div id="postMessage" class="post-message">
                    <form class="form-horizontal" action="/" method="POST">
                        <!--&lt;!&ndash;  Nickname  &ndash;&gt;-->
                        <!--<div class="form-group col-xs-4">-->
                            <!--<label for="nickname"></label>-->
                            <!--<input id="nickname" name="nickname" type="text" class="form-control"-->
                                   <!--placeholder="Please, enter a nickname">-->
                        <!--</div>-->

                        <!--  Message  -->
                        <div class="form-group ">
                            <label for="message"></label>
                            <textarea name="message" id="message" class="form-control" placeholder="Type your message here:"></textarea>
                        </div>

                        <!--  Submit Button  -->
                        <div class="form-group">
                            <div class="col-sm-12 text-center">
                                <button type="submit" class="btn btn-primary">Send</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>


        </div>
    </div>
</div>

{{> footer}}