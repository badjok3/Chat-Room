                        <span class="caret"></span>
                    </a>

                    <div class="scroll-box">
                        {{#each conversations}}
                            <div class="list-group-item">
                                {{title}}
                                <a href="/conversation/{{this._id}}" class="btn btn-default btn-sm">Join</a>
                            </div>
                        {{/each}}
                    </div>
                </div>

                <!-- Private Chat Rooms -->
                <!--<div id="privateChats" class="list-group  scroll-bar-wrap">-->

